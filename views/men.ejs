<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="/css/header.css">
</head>

<body>
    <header>
        <div class="logo">
            <a href="/"><img src="/Assets/Ecleoz logo.png" alt="" height="80px" width="80px"></a>
        </div>
        <div class="links">
            <ul>
                <li>
                    <a href="#">Men</a>
                    <i class="fa-solid fa-angle-down"></i>
                </li>
                <li>
                    <a href="#">Women</a>
                    <i class="fa-solid fa-angle-down"></i>
                </li>
                <li>
                    <a href="#">Footwear</a>
                    <i class="fa-solid fa-angle-down"></i>
                </li>
                <li>
                    <a href="#">Accesories</a>
                    <i class="fa-solid fa-angle-down"></i>
                </li>
            </ul>
        </div>
        <div class="sign">
            <a href="<%= isLogged ? " /logout" : "/login" %>"><button class="log">
                    <%= isLogged ? "Logout" : "Login" %>
                </button></a>

            <% if(isLogged){ %>
                <p>Hello <%= user.firstname %>
                </p>
                <% } else{ %>
                    <a href="/signup">Signup</a>
                    <% } %>
        </div>
    </header>
    <div class="gallery">
        <% for (const product of products) { %>
            <div class="content">
                <img src="<%= product.imageurl %> ">
                <h3><%= product.name %></h3>
                <p><%= product.brandname %> </p>
                <h6>$<%= product.price %></h6>
                <ul>
                  <li><i class="fa fa-star" aria-hidden="true"></i></li>
                  <li><i class="fa fa-star" aria-hidden="true"></i></li>
                  <li><i class="fa fa-star" aria-hidden="true"></i></li>
                  <li><i class="fa fa-star" aria-hidden="true"></i></li>
                  <li><i class="fa fa-star" aria-hidden="true"></i></li>
                </ul>
                <button class="buy-2">Buy Now</button>
              </div>
            <% } %>
    </div>
</body>

</html>s